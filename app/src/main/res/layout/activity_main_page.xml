<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BackgroundColorPrime"
        android:orientation="vertical">
        <TextView
            android:id="@+id/RR"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/custom2"
            android:backgroundTint="@color/Raj2"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:text="Rajasthan Royals"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/custom2"
            android:backgroundTint="@color/PSBK"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:text="Punjab Kings"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/custom2"
            android:backgroundTint="@color/CSK"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:text="Chennai Super Kings"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/custom2"
            android:backgroundTint="@color/RCB2"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:text="Royal Challengers Bangalore"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/custom2"
            android:backgroundTint="@color/SRH"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:text="Sunrisers Hyderabad"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/custom2"
            android:backgroundTint="@color/KKR"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:text="Kolkata Knight Riders"/>




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>